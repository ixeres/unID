<!DOCTYPE html>
<html>
  <head>
    <title>Unid</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- <style>
    @import url(https://fonts.googleapis.com/css?family=Jura);
    </style> -->
    <style>
    @import url(https://fonts.googleapis.com/css?family=Raleway);

    </style>

    </style>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    </head>



<body class="body">

  <% unless @homepage %>

    <div class="nav">
      <div class="container">
        <ul class="pull-left">
          <li><%= link_to "Home", root_path %> <%= link_to "About", root_path %></li>
        </ul>
        <ul class="pull-right">
          <% if current_user %>
            <li>Signed in as <%= current_user.username.capitalize %> <%= link_to "Log Out", session_path("current"), method: :delete %></li>
            <% else  %>
            <li><%= link_to "Log In or Sign Up", root_path, id: "login_link" %></li>
          <% end %>
        </ul>
      </div>
    </div>

<% end  %>

    <div id="flash_box">
      <% if flash[:notice] %>
        <p class="flash_notice"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:error] %>
        <p class="flash_error"><%= flash[:error] %></p>
      <% end %>
    </div>

    <div id="signUpLayout" class="fadeInForm">
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <a class='form_close', href='#'>x</a>
    <%= render partial: "users/signup", locals: {user: new_user} %>
    </div>

    <div id="logInLayout" class="fadeInForm">
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <a class='form_close', href='#'>x</a>
    <%= render partial: "sessions/login_form" %>
    </div>

    <%= yield %>

    <footer class="foot">
      <ul class="footnav">
      <!--  <li class="foot-item">Item 1</li>
        <li class="foot-item">Item 2</li>
        <li class="foot-item">Item 3</li>
      </ul> -->
    </footer>
  </body>
</html>
