<div class="edit_page_card row"><!-- <h2>Log In</h2> -->

  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %><br/>
      <%= email_field_tag :email, params[:email], class: :edit_form_field %>
    </div>
    <br>

    <div class="field">
      <%= label_tag :password %><br/>
      <%= password_field_tag :password, nil, class: :edit_form_field %>
    </div>
    <br>

    <div class="actions"><%= submit_tag "Log in", class: :submit_button %></div>
  <% end  %>
  <br>

  <%= link_to "Forgot your password?", "/auth/reset_password", id: "forgot-password-link" %>

</div>
