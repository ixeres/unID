<%= form_for user, url: user_page(user) do |f| %>
 <% if user.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="edit_page_card row">
    <div class="update_avatar col-xs-6">
      <div class="row">
        <div class="col-xs-12">
          <label>My Avatar</label>
          <%= image_tag(user.avatar_url, class: "edit_page_avatar img-responsive") if user.avatar? %>
        </div>
      </div>
      <div class="row avatar-file-field">
        <div class="col-xs-12">
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
        </div>
      </div>
    </div>

    <div class="update_fields col-xs-6">
      <div class="field">
        <%= f.label :username %><br/>
        <%= f.text_field :username %>
      </div>

      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.text_field :email %>
      </div></br>

      <div class="actions"><%= f.submit class: :submit_button %>
      </div>

    <% end %>
  </div>
</div>
