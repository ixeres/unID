<!DOCTYPE html>
<html>
  <head>
    <title>Unid</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if (flash[:notice]) %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if (flash[:alert]) %>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>
    <% unless @homepage  %>
      <% if current_user %>
        Signed in as <%= current_user.username %>. <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
      <% else  %>
        <%= link_to "Log In or Sign Up", new_user_session_path %>
      <% end %>
    <% end  %>
    <%= yield %>
  </body>
</html>
