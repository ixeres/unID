<!DOCTYPE html>
<html>
  <head>
    <title>Unid</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul class="navbar">
      <li class="nav-item"><%= link_to "Home", root_path %></li>
      <li class="nav-item"><%= link_to "About", root_path %></li>
    </ul>

    <% unless @homepage  %>
      <% if current_user %>
      Signed in as <%= current_user.username %>. <%= link_to "Log Out", session_path("current"), method: :delete %>
      <% else  %>
      <%= link_to "Log In or Sign Up", root_path %>
      <% end %>
    <% end  %>
    <%= yield %>

    <footer class="foot">
      <ul class="footnav">
        <li class="foot-item">Item 1</li>
        <li class="foot-item">Item 2</li>
        <li class="foot-item">Item 3</li>
      </ul>
    </footer>
  </body>
</html>
