
<div class="col-md-4">
  <div class="card">

  <h2><%= link_to profile.provider, profile.url %></h2>

    <img class="profile_pic" src="<%= profile.image %>" alt="Profile Pic">

  <ul>
    <% case profile.provider %>
    <% when 'twitter' %>
      <li><%=profile.name%></li>
      <li><%= link_to "@#{profile.nickname}", profile.url %></li>
    <% when 'google' %>
      <li><%=profile.name%></li>
      <li><%= link_to 'profile', profile.url %></li>
    <% when 'youtube' %>
      <li><%=profile.name%></li>
      <li><%= link_to 'profile', profile.url %></li>
    <% when 'tumblr' %>
      <li><%=profile.name%></li>
      <li><%= link_to profile.nickname, profile.url %></li>
    <% when 'linkedin' %>
      <li><%=profile.name%></li>
      <li><%= link_to profile.name, profile.url %></li>
    <% when 'facebook' %>
      <li><%=profile.name%></li>
      <li><%= link_to profile.name, profile.url %></li>
    <% when 'twitch' %>
      <li><%=profile.name%></li>
      <li><%= link_to profile.name, profile.url %></li>
      <%= render partial: 'live', locals: {profile: profile} %>
    <% when 'github' %>
      <li><%=profile.name%></li>
      <li><%= link_to profile.nickname, profile.url %></li>
    <% else %>
      <li>Other account</li>
    <% end %>
    <%= link_to 'Edit', edit_profile_page(profile) %>
| <%= link_to 'Delete', profile_page(profile), method: :delete, data: {confirm: "Are you sure you want to delete this profile? This cannot be undone!"} %>

    </ul>
  </div>
</div>
