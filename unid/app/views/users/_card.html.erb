<div class="col-md-4" id="sortable">
  <div class="card <%= profile.provider %>">

    <a href="<%=profile.url %>"><img class="profile_pic" src="<%= profile.image %>" alt="Profile Pic"></a>


  <ul>
     <div class="card_names">
    <% case profile.provider %>
    <% when 'twitter' %>

      <img class="provider_icon" src="https://d30y9cdsu7xlg0.cloudfront.net/png/29926-200.png" alt="Network Icon">
      <li class="list"><%= link_to "@#{profile.nickname}", profile.url %></li>
    <% when 'google' %>
      <img class="provider_icon" src="https://d30y9cdsu7xlg0.cloudfront.net/png/29926-200.png" alt="Network Icon">
      <li class="list"><%= link_to profile.name, profile.url%></li>
    <% when 'youtube' %>
      <img class="provider_icon" src="https://d30y9cdsu7xlg0.cloudfront.net/png/29926-200.png" alt="Network Icon">
      <li class="list"><%= link_to profile.name, profile.url %></li>
    <% when 'tumblr' %>
      <img class="provider_icon" src="https://d30y9cdsu7xlg0.cloudfront.net/png/29926-200.png" alt="Network Icon">
      <li class="list"><%= link_to profile.nickname, profile.url %></li>
    <% when 'linkedin' %>
      <img class="provider_icon" src="https://d30y9cdsu7xlg0.cloudfront.net/png/29926-200.png" alt="Network Icon">
      <li><%= link_to "#{profile.first_name} #{profile.last_name}", profile.url %></li>
    <% when 'facebook' %>
      <img class="provider_icon" src="https://d30y9cdsu7xlg0.cloudfront.net/png/29926-200.png" alt="Network Icon">
      <li class="list"><%= link_to profile.name, profile.url %></li>
    <% when 'twitch' %>
      <img class="provider_icon" src="https://d30y9cdsu7xlg0.cloudfront.net/png/29926-200.png" alt="Network Icon">
      <li class="list"><%= link_to profile.name, profile.url %></li>
    <div class="twitch-status">
    <%= render partial: 'live', locals: {profile: profile} %>
    </div>

    <% when 'github' %>

      <img class="provider_icon" src="https://d30y9cdsu7xlg0.cloudfront.net/png/29926-200.png" alt="Network Icon">

      <li class="list"><%= link_to profile.name, profile.url %></li>
    <% else %>
    <img class="profile_pic" src="<%= profile.image_other %>" alt="Profile Pic">
    <li class="list">Other account</li>
    <% end %>
    <% if current_user && current_user == profile.user %>
      <%= link_to 'Edit', edit_profile_page(profile) %>
      | <%= link_to 'Delete', profile_page(profile), method: :delete, data: {confirm: "Are you sure you want to delete this profile? This cannot be undone!"} %>
    <% end %>

    </ul>
  </div>
</div>
