<h1>Add some profile cards!</h1>

<%= button_to "Add Twitter Account", "/auth/twitter", class: "btn btn-info" %> <br>
<%= button_to "Add Google Account", "/auth/google", class: "btn btn-warning" %> <br>
<%= button_to "Add YouTube Channel", "/auth/youtube", class: "btn btn-danger" %> <br>
<%= button_to 'Add Linkedin Account', '/auth/linkedin', class: "btn btn" %> <br>
<%= button_to "Add Tumblr Account", "/auth/tumblr", class: "btn btn-success" %> <br>
<%= button_to "Add Facebook Account", "/auth/facebook", class: "btn btn-primary" %>

<%= form_for @profile, url: user_profiles_path(@user.username) do |p| %>
  <div class="field">
    <%= p.label :uid, value: "Username" %><br/>
    <%= p.text_field :uid %>
  </div>
  <div class="field">
    <%= p.label :name %><br/>
    <%= p.text_field :name %>
  </div>
  <div class="field">
    <%= p.label :description %><br/>
    <%= p.text_field :description %>
  </div>
  <div class="field">
    <%= p.label :url %><br/>
    <%= p.text_field :url %>
  </div>
  <div class="field">
    <%= p.label :provider %><br/>
    <%= p.text_field :provider %>
  </div>
  <button type="submit" class="btn btn-primary btn-lg"><%="Add Card"%></button>
  </div>
<% end %>
