<%= link_to "Edit User", edit_user_path(@user.username), class: "btn btn-success" %>

<ul>
  <div class="container">
    <div class="row">
      <% @user.profiles.each do |profile| %>
      
      <%= render partial: 'card', locals: {profile: profile}%>
      <% if profile.provider == 'twitch' %>
      <%= render partial: 'live', locals: {profile: profile} %>
      <% end %>
      <% end  %>
  </div>
</ul>

<% if current_user && current_user == @user %>

<div class="unid_button"><%= link_to "Add A New Card", new_user_profile_path(current_user), class: "btn btn-success" %></div>

<% end %>
